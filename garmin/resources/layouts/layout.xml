<layout id="GoalReviewLayout">

    <text-area
        id="NumerLabel" x="0%" y="2%" font="Graphics.FONT_XTINY" width="100%" height="20%"
        justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <text-area
        id="GoalCategory" x="0%" y="9%" font="Graphics.FONT_XTINY" width="100%" height="20%"
